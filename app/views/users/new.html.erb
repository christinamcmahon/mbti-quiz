<h1>Create a New User</h1>
<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :bio %>
    <%= f.text_area :bio %><br>
    <%= f.label "Follow: " %><br>
    <%= f.collection_check_boxes(:friend_ids , User.all, :id, :name) %><br>
    <%= f.submit %>
<% end %>