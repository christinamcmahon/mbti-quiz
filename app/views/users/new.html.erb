<h1>Create a New User</h1>
<%= form_for @user do |f| %>
    <p></p>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
    <p></p>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <p></p>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %><br>
    <p></p>
    <%= f.label "Friends: " %>
    <%= f.collection_check_boxes(:friend_ids , User.all, :id, :name ) do |b| %><br>
        <%= b.label(class: "label-checkbox") { b.check_box + "  " + b.text } %>
    <% end %>
    <p></p>
    <%= f.submit %>
<% end %>
